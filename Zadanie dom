#include <stdio.h>

int main()
{
    int i,silnia,x;
    printf("Podaj liczbÄ™ silnii");
    scanf( %d , x&);

    for(i=1;i<=x;i++)
    {
        silnia=silnia*i;
        printf("%d\t",&silnia);
        printf("\n");
    }

    return 0;
}
