#include <stdio.h>

int main()
{
float a,b,c;
printf("Podaj a i b");
scanf(%f %f,&a &b);

printf("\n %.1f + %.2f = %.3f \n", a, b, a+b);
printf("\n %.1f - %.2f = %.3f \n", a, b, a-b);
printf("\n %.1f * %.2f = %.3f \n", a, b, a*b);
printf("\n %.1f / %.2f = %.3f \n", a, b, a/b);

printf(""\n stare a = %f \n", a);
a=a*b;
printf(""\n nowe a = %f \n", a);

return 0;
}

